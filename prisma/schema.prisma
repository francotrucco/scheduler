// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model Appointments {
    id        String   @id @default(cuid())
    doctorId String
    patientId String
    appointmentTime DateTime

    @@index([doctorId, patientId])  
}

model DoctorHours {
  doctorId String @id @default(cuid())
  startTime DateTime
  endTime DateTime

  @@index([doctorId])
}

model UserDetails {
  id String @id @default(cuid())
  name String
  phone String
  birthdate DateTime
  role String
  dni Int
  email String @db.VarChar(60)
}
