// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model Appointment {
    id        String   @id @default(cuid())
    doctorId String
    patientId String
    appointmentTime DateTime
    doctor  User?    @relation(name: "doctor", fields: [doctorId], references: [id])
    patient User?    @relation(name: "patient", fields: [patientId], references: [id])

    @@index([doctorId])  
    @@index([patientId])
}

model WorkingHours {
  doctorId String @id @default(cuid())
  startTime DateTime
  endTime DateTime

  @@index([doctorId])
}

model User {
  id       String       @id @default(cuid())
  email    String    @unique
  password String?
  phone   String? 
  name     String
  role     Role
  googleId String?
  facebookId String?
  appointmentsAsDoctor Appointment[] @relation(name: "doctor")
  appointmentsAsPatient Appointment[] @relation(name: "patient")
}

enum Role {
  DOCTOR
  PATIENT
}

model InsuranceCompany {
  id String @id @default(cuid())
  name String
  plans InsuranceCompanyPlan[]
}

model InsuranceCompanyPlan {
  id String @id @default(cuid())
  name String
  insuranceCompany InsuranceCompany? @relation(fields: [insuranceCompanyId], references: [id])
  insuranceCompanyId String?

  @@index([insuranceCompanyId])
}

model MedicalService {
  id String @id @default(cuid())
  name String
	@@map("MedicalServices")
}

model DoctorsMedicalService {
  id String @id @default(cuid())
  doctorId String
  medicalServiceId String
}