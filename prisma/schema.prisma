// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model Appointments {
    id        String   @id @default(cuid())
    doctorId String
    patientId String
    appointmentTime DateTime

    @@index([doctorId, patientId])  
}

model DoctorHours {
  doctorId String @id @default(cuid())
  startTime DateTime
  endTime DateTime

  @@index([doctorId])
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String?
  phone   String? 
  name     String
  role     Role
  googleId String?
  facebookId String?
}

enum Role {
  DOCTOR
  PATIENT
}

model InsuranceCompany {
  id String @id @default(cuid())
  name String
  plans InsuranceCompanyPlan[]
}

model InsuranceCompanyPlan {
  id String @id @default(cuid())
  name String
  insuranceCompany InsuranceCompany? @relation(fields: [insuranceCompanyId], references: [id])
  insuranceCompanyId String?

  @@index([insuranceCompanyId])
}

model MedicalServices {
  id String @id @default(cuid())
  name String
}

model DoctorsMedicalServices {
  id String @id @default(cuid())
  doctorId String
  medicalServiceId String
}